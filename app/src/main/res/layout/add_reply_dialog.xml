<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <Button
        android:id="@+id/btn_cancelNoteDialog"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:radius="80dp"
        android:text="@string/cancel"
        android:background="@color/primaryColor"
        app:layout_constraintStart_toStartOf="@+id/txt_addNoteDialog"
        app:layout_constraintTop_toBottomOf="@+id/txt_addNoteDialog"
        android:layout_marginLeft="24dp" />

    <Button
        android:id="@+id/btn_addNoteDialog"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:radius="80dp"
        android:text="@string/add"
        android:background="@color/primaryColor"
        app:layout_constraintStart_toEndOf="@+id/btn_cancelNoteDialog"
        app:layout_constraintTop_toTopOf="@+id/btn_cancelNoteDialog"
        android:layout_marginLeft="32dp" />

    <EditText
        android:id="@+id/txt_addNoteDialog"
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="@string/write_your_reply"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="281dp"
        android:layout_height="32dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/add_your_reply"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.292"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_addNoteDialog">

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
