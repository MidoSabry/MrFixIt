<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FFB900"
    app:cardCornerRadius="30dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    android:textAlignment="center"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/clock_btn" />

        <TextView
            android:id="@+id/history_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:34"
            android:textColor="@color/fourthColor"
            android:textSize="20sp"
            android:layout_marginRight="100dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:src="@drawable/calender_btn" />

        <TextView
            android:id="@+id/history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2-8-2021"
            android:textColor="@color/fourthColor"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/emp_doneby"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="@string/emp_name"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="14dp"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/history_kind_job"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="@string/type_of_job"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/grey_font"
            android:textStyle="bold"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/job_address"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="@string/job_address"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/grey_font"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done_with_rating"
            android:textSize="22sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/red"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:numStars="5"
            android:layout_gravity="right"/>


        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="right"
            android:background="@drawable/delete_icon" />


    </LinearLayout>



</androidx.cardview.widget.CardView>