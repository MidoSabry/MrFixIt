<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Worker.DetailsJobPage.DetailsJobActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Details"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/primaryColor"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linear_layout_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Type of order"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold|italic"/>
                <TextView
                    android:id="@+id/text_typeOfOrder_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Maintenance and repair"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/grey_font"
                    android:textColorHint="@color/grey_font"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Details of job"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold|italic"/>
                <TextView
                    android:id="@+id/text_detailsOfJob_details"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginTop="7dp"
                    android:hint=" Description of the problem"
                    android:textStyle="bold"
                    android:background="@color/white"
                    android:textSize="18dp"
                    android:textColor="@color/grey_font"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Location"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold|italic"/>
                <TextView
                    android:id="@+id/text_location_details"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_marginTop="7dp"
                    android:hint="Sidi Beshr-Alex"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textSize="20dp"
                    android:background="@color/white"
                    android:textColorHint="@color/grey_font"
                    android:textColor="@color/grey_font"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Phone"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold|italic"/>
                <TextView
                    android:id="@+id/text_phone_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="01225699594"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:textColorHint="@color/grey_font"
                    android:textColor="@color/grey_font"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Time"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold|italic"/>
                    <TextView
                        android:id="@+id/text_time_details"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="     2:30"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColorHint="@color/grey_font"
                        android:textColor="@color/grey_font"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold|italic"/>
                    <TextView
                        android:id="@+id/text_date_details"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="12/12/2021"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColorHint="@color/grey_font"
                        android:textColor="@color/grey_font"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Payment"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold|italic"/>
                <TextView
                    android:id="@+id/text_payment_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Visa"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:textColorHint="@color/grey_font"
                    android:textColor="@color/grey_font"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_accept_details"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button2"
                android:text="Accept"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>